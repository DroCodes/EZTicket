@model RegisterModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Register User";
}

@* Register Page. Can only be accessed by an admin to register new users *@
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

        <h2 class="mb-4">Register User</h2>
        
        <form method="post" asp-action="RegisterUser">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" asp-for="FirstName" placeholder="Enter your first name" required>
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" asp-for="LastName" placeholder="Enter your last name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" asp-for="EmailAddress" placeholder="example@email.com" required>
            </div>
            
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" class="form-control" id="phone" asp-for="PhoneNumber" placeholder="555-555-5555" required>
            </div>
            

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" asp-for="UserName" placeholder="Choose a username" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Enter your password" required>
            </div>
            
             <div class="form-group">
                 <label for="confirmPassword">Password</label>
                 <input type="password" class="form-control" id="confirmPassword" asp-for="ConfirmPassword" placeholder="Confirm your password" required>
             </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        </div>
    </div>
</div>